{
  "bindings": [
    {
      "authLevel": "function",
      "name": "req",
      "type": "httpTrigger",
      "direction": "in",
      "methods": [
        "get"
      ],
      "route": "records/{id}"
    },
    {
      "name": "$return",
      "type": "http",
      "direction": "out"
    },
    {
      "type": "cosmosDB",
      "name": "recordDocument",
      "databaseName": "recorddb",
      "collectionName": "records",
      "connectionStringSetting": "cmp-cosmosdb-demo_DOCUMENTDB",
      "direction": "in",
      "sqlQuery": "select  * from c where c.id={id}"
    }
  ],
  "disabled": false
}
